<Window x:Class="Vistas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:control="clr-namespace:Vistas.ControlUsuario"
        Title="Login - Sistema de Cursos"
        WindowStartupLocation="CenterScreen"  
        Background="#f8f0ec" Height="534" Width="512">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- LOGO ENCIMA DEL TÍTULO -->
        <Image Source="/Images/logo-lujan.png" Grid.Row="0"
               Width="90" Height="100" 
               HorizontalAlignment="Center"
               Margin="0,0,0,10"/>

        <!-- TÍTULO PRINCIPAL -->
        <Label Content="INICIO DE SESIÓN" Grid.Row="1"
               Style="{StaticResource LabelTitulo}" 
               HorizontalAlignment="Center"
               Margin="0,0,0,20"/>

        <!-- CONTROL DE LOGIN -->
        <control:Login x:Name="login" Grid.Row="2"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,20"/>

        <!-- BOTONES -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,10,0,0">
            <Button Name="btnIngresar" Content="Ingresar" Width="120" Height="40"
                    Style="{StaticResource btnAceptar}" 
                    Click="btnIngresar_Click" Margin="0,0,15,0"/>
            <Button Name="btnCancelar" Content="Salir" Width="120" Height="40"
                    Style="{StaticResource btnCancelar}" 
                    Click="btnSalir_Click"/>
        </StackPanel>

    </Grid>
</Window>