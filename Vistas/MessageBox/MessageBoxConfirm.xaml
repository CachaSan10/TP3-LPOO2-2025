<Window x:Class="Vistas.MessageBoxConfirm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" 
        Background="Transparent" AllowsTransparency="True"
        Height="232" Width="416">

    <!-- Elimina el Border exterior y aplica directamente el fondo blanco -->
    <Grid>
        <Border Background="White" BorderBrush="#990506" BorderThickness="2" CornerRadius="10" 
                Height="192" Width="388" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- CABECERA -->
                <Border Grid.Row="0" Background="#990506" CornerRadius="8,8,0,0" Margin="-2,-2,-2,0">
                    <TextBlock x:Name="txtTitle" Text="Confirmación" 
                              Foreground="White" FontSize="18" FontWeight="Bold"
                              HorizontalAlignment="Center" VerticalAlignment="Center"
                              Margin="10" Padding="5"/>
                </Border>

                <!-- MENSAJE -->
                <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,15,0,15">
                    <TextBlock x:Name="txtMessage" Text="¿Desea continuar?"
                                TextAlignment="Center"
                               Style="{StaticResource CustomTextBlock}" 
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center" Width="204" Height="23" />
                </StackPanel>

                <!-- BOTONES -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,5">
                    <Button x:Name="btnSi" Content="Sí" Width="100" Height="35" Margin="5,0"
                            Click="btnSi_Click" Style="{StaticResource btnAceptar}"/>
                    <Button x:Name="btnNo" Content="No" Width="100" Height="35" Margin="5,0"
                            Click="btnNo_Click" Style="{StaticResource btnCancelar}" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>