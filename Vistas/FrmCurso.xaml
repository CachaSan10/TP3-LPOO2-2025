<Window x:Class="Vistas.FrmCurso"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:control="clr-namespace:Vistas.ControlUsuario"
        Title="Alta de Curso"
        Height="712" Width="1122"
        WindowStartupLocation="CenterScreen" Background="#f8f0ec">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ENCABEZADO CON TÍTULO Y LOGO -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- TÍTULO PRINCIPAL CENTRADO -->
            <Label Content="ALTA DE CURSO" 
                   Style="{StaticResource LabelTitulo}" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Grid.Column="0" Grid.ColumnSpan="2"/>

            <!-- LOGO EN ESQUINA SUPERIOR DERECHA -->
            <Image Source="/Images/logo-lujan.png" Grid.Column="1"
                   Width="80" Height="80" 
                   HorizontalAlignment="Right" VerticalAlignment="Center"/>
        </Grid>

        <!-- CONTROL DE USUARIO -->
        <control:AltaCurso x:Name="altaCurso" Grid.Row="1"
                           Margin="0,5,0,0"/>

        <!-- BOTONES CENTRADOS -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,15,0,0">
            <Button Name="btnGuardar" Content="Guardar" Width="120" Height="40"
                    Style="{StaticResource btnAceptar}" 
                    Click="btnGuardar_Click" Margin="0,0,15,0"/>
            <Button Name="btnCancelar" Content="Cancelar" Width="120" Height="40"
                    Style="{StaticResource btnCancelar}" 
                    Click="btnCancelar_Click"/>
        </StackPanel>

    </Grid>
</Window>