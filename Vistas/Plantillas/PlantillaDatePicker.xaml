<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="CustomDatePicker" TargetType="DatePicker">
        <Setter Property="Height" Value="40" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="DatePicker">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>

                        <!-- El textbox interno (nombre requerido) -->
                        <DatePickerTextBox x:Name="PART_TextBox"
                                           Grid.Column="0"
                                           Background="White"
                                           BorderBrush="#990506"
                                           BorderThickness="2"
                                           Padding="8,4"
                                           VerticalContentAlignment="Center" />

                        <!-- Botón real que DatePicker reconoce (nombre requerido) -->
                        <Button x:Name="PART_Button"
                                Grid.Column="1"
                                Background="#990506"
                                BorderThickness="0"
                                Cursor="Hand"
                                Focusable="False"
                                Margin="0">
                            <Path Data="M 0 0 L 4 4 L 8 0 Z"
                                  Fill="White"
                                  Stretch="Uniform"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </Button>

                        <!-- Popup con el Calendar (vinculado a SelectedDate) -->
                        <Popup x:Name="PART_Popup"
                               Placement="Bottom"
                               IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                               AllowsTransparency="True"
                               StaysOpen="False"
                               Focusable="False">
                            <Border Background="White"
                                    BorderBrush="#990506"
                                    BorderThickness="2"
                                    Padding="6"
                                    CornerRadius="6"
                                    SnapsToDevicePixels="True">
                                <!-- Calendar vinculado al SelectedDate del DatePicker -->
                                <Calendar x:Name="PART_Calendar"
                                          SelectedDate="{Binding SelectedDate, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                          DisplayDate="{Binding DisplayDate, RelativeSource={RelativeSource TemplatedParent}}"/>
                            </Border>
                        </Popup>
                    </Grid>

                    <!-- Simple triggers visuales -->
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="PART_TextBox" Property="Background" Value="#EEE"/>
                            <Setter TargetName="PART_TextBox" Property="Foreground" Value="Gray"/>
                            <Setter TargetName="PART_Button" Property="Opacity" Value="0.6"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="PART_TextBox" Property="BorderBrush" Value="#600C0C"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>



</ResourceDictionary>